@model LocalEventsViewModel
@{
    ViewData["Title"] = "Local Events & Announcements";
}

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="display-5">Local Events & Announcements</h1>
        <p class="lead text-muted">Stay connected with what's happening in your community.</p>
    </div>

    @if (Model.RecommendedEvents.Any())
    {
        <div class="mb-5">
            <h3 class="mb-3">Recommended For You</h3>
            <div class="row">
                @foreach (var ev in Model.RecommendedEvents)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm event-card">
                            <img src="@ev.ImageUrl" class="card-img-top" alt="@ev.Title">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@ev.Title</h5>
                                <p class="card-text text-muted small">
                                    <span class="badge bg-secondary">@ev.Category</span>
                                </p>
                                <p class="card-text">@ev.Description</p>
                                <div class="mt-auto">
                                    <hr />
                                    <p class="mb-1 small">
                                        <i class="fa-solid fa-calendar-days me-2"></i>
                                        <strong>Date:</strong> @ev.Date.ToString("dd MMMM yyyy")
                                    </p>
                                    <p class="mb-0 small">
                                        <i class="fa-solid fa-location-dot me-2"></i>
                                        <strong>Location:</strong> @ev.Location
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <hr />
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="LocalEvents" method="get" class="row g-3 align-items-center">
                        <div class="col-md-6">
                            <input type="text" name="searchQuery" class="form-control" placeholder="Search by event title..." value="@ViewData["CurrentSearch"]">
                        </div>
                        <div class="col-md-4">
                            <select name="category" class="form-select" asp-items="@ViewBag.Categories">
                                <option value="">All Categories</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var ev in Model.DisplayEvents)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm event-card">
                    <img src="@ev.ImageUrl" class="card-img-top" alt="@ev.Title">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@ev.Title</h5>
                        <p class="card-text text-muted small">
                            <span class="badge bg-secondary">@ev.Category</span>
                        </p>
                        <p class="card-text">@ev.Description</p>
                        <div class="mt-auto">
                            <hr />
                            <p class="mb-1 small">
                                <i class="fa-solid fa-calendar-days me-2"></i>
                                <strong>Date:</strong> @ev.Date.ToString("dd MMMM yyyy")
                            </p>
                            <p class="mb-0 small">
                                <i class="fa-solid fa-location-dot me-2"></i>
                                <strong>Location:</strong> @ev.Location
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>