@model LocalEventsViewModel
@{
    ViewData["Title"] = "Local Events & Announcements";
}

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="display-5">Local Events & Announcements</h1>
        <p class="lead text-muted">Stay connected with what's happening in your community.</p>
    </div>

    @if (Model.FeaturedEvents.Any())
    {
        <h3 class="mb-3">Featured Events</h3>
        <div class="row">
            @foreach (var ev in Model.FeaturedEvents)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 featured-event-card">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@ev.ImageUrl" class="featured-event-image" alt="@ev.Title">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body d-flex flex-column h-100">
                                    <h5 class="card-title">@ev.Title</h5>
                                    <p class="card-text small text-muted">@ev.Description</p>
                                    <div class="mt-auto">
                                        <a asp-action="LocalEvents" asp-route-category="@ev.Category" class="btn btn-sm btn-outline-primary">
                                            View Category <i class="fa-solid fa-arrow-right-long ms-1"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr class="my-4">
    }

    <div class="card mb-5">
        <div class="card-header">
            <h5>Find an Event</h5>
        </div>
        <div class="card-body">
            <form asp-action="LocalEvents" method="get" class="row g-3 align-items-center">
                <div class="col-lg-5">
                    <input type="text" name="searchQuery" class="form-control" placeholder="Search by event title..." value="@ViewData["CurrentSearch"]">
                </div>
                <div class="col-lg-3">
                    <select name="category" class="form-select" asp-items="@ViewBag.Categories">
                        <option value="">All Categories</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <select name="sortBy" class="form-select" asp-items="(SelectList)ViewBag.SortByList">
                    </select>
                </div>
                <div class="col-lg-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.RecommendedEvents.Any())
    {
        <div id="recommendation-section" class="mb-5">
            <h3 class="mb-3">Recommended For You</h3>
            <div class="alert alert-info">
                <p class="mb-0">Based on your interest in <strong>@Model.FavoriteCategory</strong> (searched @Model.SearchCount times), you might also like these events:</p>
            </div>
            <div class="row">
                @foreach (var ev in Model.RecommendedEvents)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm event-card" data-bs-toggle="modal" data-bs-target="#eventDetailModal" data-eventid="@ev.Id">
                            <img src="@ev.ImageUrl" class="card-img-top" alt="@ev.Title">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@ev.Title</h5>
                                <div class="mt-auto">
                                    <hr />
                                    <p class="mb-0 small"><i class="fa-solid fa-calendar-days me-2"></i>@ev.Date.ToString("dd MMM")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <hr />
        </div>
    }

    <h3 class="mb-3">Upcoming Events</h3>
    <div class="row">
        @if (Model.DisplayEvents.Any())
        {
            @foreach (var ev in Model.DisplayEvents)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm event-card" data-bs-toggle="modal" data-bs-target="#eventDetailModal" data-eventid="@ev.Id">
                        <img src="@ev.ImageUrl" class="card-img-top" alt="@ev.Title">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@ev.Title</h5>
                            <p class="card-text text-muted small"><span class="badge bg-secondary">@ev.Category</span></p>
                            <p class="card-text">@ev.Description</p>
                            <div class="mt-auto">
                                <hr />
                                <p class="mb-1 small"><i class="fa-solid fa-calendar-days me-2"></i><strong>Date:</strong> @ev.Date.ToString("dd MMMM yyyy")</p>
                                <p class="mb-0 small"><i class="fa-solid fa-location-dot me-2"></i><strong>Location:</strong> @ev.Location</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">No events match your current filters.</div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="eventDetailModal" tabindex="-1" aria-labelledby="eventDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="eventModalImage" src="" class="img-fluid rounded mb-3" alt="Event Image">
                <p id="eventModalDescription"></p>
                <hr />
                <p class="mb-1"><i class="fa-solid fa-calendar-days me-2"></i><strong>Date:</strong> <span id="eventModalDate"></span></p>
                <p class="mb-1"><i class="fa-solid fa-location-dot me-2"></i><strong>Location:</strong> <span id="eventModalLocation"></span></p>
                <p class="mb-0"><i class="fa-solid fa-tag me-2"></i><strong>Category:</strong> <span id="eventModalCategory"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>